pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Ishikapbhatt/Docker-Compose.git'
            }
        }

        stage('Docker Compose Build & Run') {
            steps {
                sh '''
                  docker compose down
                  docker compose build
                  docker compose up -d
                '''
            }
        }
    }
}
